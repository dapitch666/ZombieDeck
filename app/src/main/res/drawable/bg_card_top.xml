<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/stripe_bg">
        <shape>
            <size
                android:width="300dp"
                android:height="75dp" />
            <solid android:color="@color/danger_yellow" />
        </shape>
    </item>
    <item>
        <bitmap
            android:src="@drawable/stripes_pattern"
            android:tileMode="repeat" />
    </item>
    <item
        android:id="@+id/top_bg"
        android:bottom="15dp">
        <shape>
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item
        android:top="73dp">
        <shape android:shape="rectangle">
            <solid android:color="#777777" />
        </shape>
    </item>
</layer-list>