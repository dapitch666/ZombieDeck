<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.WelcomeFragment">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_sheet" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="@font/overpass_bold"
            android:minHeight="48dp"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/determinateBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="25"
            app:layout_constraintTop_toBottomOf="@+id/spinner_danger" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="260dp"
            android:layout_height="400dp"
            android:visibility="invisible"
            android:background="@drawable/bg_card"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_card"
                android:scaleType="centerCrop" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:paddingVertical="20dp"
                    android:paddingRight="60dp"
                    android:src="@drawable/walker" />

                <TextView
                    android:id="@+id/card_zombie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:fontFamily="@font/overpass_black"
                    android:paddingVertical="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/abomination"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/card_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="#001"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:paddingEnd="10dp"
                    app:layout_constraintTop_toTopOf="@+id/card_zombie" />

                <TextView
                    android:id="@+id/zombie_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/zombie_count_bg"
                    android:fontFamily="@font/overpass_bold"
                    android:paddingHorizontal="20dp"
                    android:text="x4"
                    android:textSize="48sp"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/card_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/overpass_bold"
                    android:textColor="@color/white"
                    android:paddingVertical="10dp"
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:text="Générez, puis activez."
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/previous_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="237dp"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="76dp"
            android:fontFamily="@font/overpass_bold"
            android:paddingHorizontal="24dp"
            android:text="@string/previous_card"
            android:textSize="16sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/next_card_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/next_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginStart="237dp"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="683dp"
            android:fontFamily="@font/overpass_bold"
            android:paddingHorizontal="24dp"
            android:text="@string/draw_a_card"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>