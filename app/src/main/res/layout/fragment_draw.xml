<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.welcome.WelcomeFragment">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_sheet" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/danger_level_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/danger_level_back_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:icon="@drawable/ic_back"
                app:iconSize="50dp"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:enabled="false"
                app:iconTint="@color/grey"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

            <TextView
                android:id="@+id/danger_level_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/overpass_bold"
                android:gravity="center"
                android:text="@string/danger_level"
                android:textColor="@color/white"
                android:minHeight="48dp"
                android:textSize="16sp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bg_danger_level" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/danger_level_forward_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                app:icon="@drawable/ic_forward"
                app:iconSize="50dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:iconTint="@color/danger_yellow"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/determinateBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/danger_yellow"
            android:indeterminate="false"
            android:max="100"
            android:padding="5dp"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_clip"
            app:layout_constraintTop_toBottomOf="@+id/danger_level_layout" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="260dp"
            android:layout_height="400dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/bg_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/card_back"
                tools:ignore="ContentDescription" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_front"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="invisible"
                tools:visibility="visible">


                <ImageView
                    android:id="@+id/bg_card_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rotation="-5"
                    android:scaleType="centerCrop"
                    android:scaleX="1.1"
                    android:src="@drawable/bg_card_top"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="5dp" />

                <TextView
                    android:id="@+id/card_zombie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_black"
                    android:paddingTop="5dp"
                    android:paddingStart="20dp"
                    android:text="@string/abomination"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="20dp"
                    android:paddingEnd="60dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/zombie_walker"
                    tools:ignore="ContentDescription,RtlSymmetry" />

                <TextView
                    android:id="@+id/card_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingEnd="10dp"
                    android:text="@string/card_number"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/card_zombie"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:id="@+id/zombie_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/zombie_count_bg"
                    android:fontFamily="@font/overpass_mono_bold"
                    android:paddingHorizontal="16dp"
                    android:text="@string/amount"
                    android:textColor="@color/white"
                    android:textSize="48sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/card_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/overpass_bold"
                    android:paddingVertical="10dp"
                    android:text="@string/spawn_then_activate"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:paddingHorizontal="10dp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/buttons_layout_line_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/previous_card_button"
                style="@style/stripedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="@string/previous_card" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_card_button"
                style="@style/stripedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/draw_a_card" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/draw_abomination_button"
            style="@style/stripedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="false"
            android:visibility="invisible"
            android:text="@string/draw_an_abomination"
            app:layout_constraintBottom_toTopOf="@id/buttons_layout_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/display_abomination_button"
            style="@style/stripedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:enabled="false"
            android:text="@string/see_abomination"
            app:layout_constraintBottom_toTopOf="@id/buttons_layout_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>