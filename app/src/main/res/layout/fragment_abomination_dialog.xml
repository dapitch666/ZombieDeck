<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/abomination_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp">

        <ImageView
            android:id="@+id/bg_card"
            android:layout_width="260dp"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_card"
            android:tintMode="multiply"
            app:tint="@color/danger_yellow"
            tools:ignore="ContentDescription" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/abomination_card_front"
            android:layout_width="260dp"
            android:layout_height="400dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bg_abomination_card_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rotation="-5"
                android:scaleType="centerCrop"
                android:scaleX="1.1"
                android:src="@drawable/bg_card_top"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="5dp" />

            <TextView
                android:id="@+id/abomination_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:fontFamily="@font/overpass_black"
                android:paddingTop="10dp"
                android:text="@string/hobomination"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/danger_yellow"
                android:textSize="26sp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/abomination_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                android:src="@drawable/abomination_abominacop"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/abomination_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:fontFamily="@font/overpass"
                android:padding="15dp"
                android:text="@string/hobomination_rule"
                android:textAlignment="center"
                android:textColor="@color/danger_yellow"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="RtlSymmetry"
                tools:layout_editor_absoluteX="0dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>